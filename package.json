    "conversation",
    "thread",
    "session",
    "persistent",
    "resume",
    "guardrail",
    "review",
    "claude",
    "claude-code",
    "stdio",
    "agent",
    "agentic"
  ],
  "author": "madwiki",
  "license": "MIT",
