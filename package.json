  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist/",
    "bin/",
    "README.md",
    "README.zh-Hans.md",
    "README.zh-Hant.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/madwiki/codex-persistent-mcp.git"
  },
  "bugs": {
